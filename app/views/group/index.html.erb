<h1>Welcome to Category page </h1><br/><br/>
<% if @groups.count > 0 %>
  <% @groups.each do |group| %>
    <%= link_to group_entities_path(group), class: "card mb-2" do %>
      <div class="card-body d-flex justify-content-between align-items-center">
        <%= image_tag group.icon || "http://localhost:3000/users/sign_up.jpg", class: 'card_icon' %>
        <div>
          <p class="fw-semibold"><%= group.name %></p>
          <p class="fw-light"><%= l group.created_at, format: :long %></p>
        </div>
        <p class="fw-bolder">
          $<%= group.entities.sum(&:amount) %>
        </p>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p>No category is navaillable for you.<br> Please and new to continue</p>
<% end %><br/>
<%= link_to 'Add Category', new_group_path, class: "btn btn-primary" %>